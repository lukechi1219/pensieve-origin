{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./_system/dist",
    "rootDir": "./_system/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["_system/src/*"]
    }
  },
  "include": ["_system/src/**/*"],
  "exclude": ["node_modules", "_system/dist", "**/*.test.ts", "**/*.spec.ts"]
}
